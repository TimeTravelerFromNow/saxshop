<p style="color: green"><%= notice %></p>

<h1>Instruments (<%= Instrument.all.count %>)</h1>

<div id="instruments" class="container">
  <div class="row gx-1 d-flex">
    <% @instruments.order(manafacturer: :asc).each do |instrument| %>
      <%= link_to instrument, class:'col' do %>
      <%= render 'instrument_preview', instrument: instrument %>
      <% end %>
    <% end %>
  </div>
</div>
